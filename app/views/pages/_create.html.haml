#create{:data => {:role => :page}}
  %header{:data => {:role => :header}}
    %h1 Create Table
  .content{:data => {:role => :content}}
    = form_tag bills_path, :method => :post, :multipart => true, :data => {:ajax => :false} do
      %input{:name => 'name', :type => 'text', :placeholder => 'Your name'}
      %input{:name => 'bill[total]', :placeholder => 'Total price on the receipt (not including tip)'}
      .add-image
        %div{:data => {:role => :button, :theme => :a}}
          Add Image
        = file_field_tag 'bill[receipt]', :accept => 'image/*;capture=camera'
      %br
      = submit_tag 'Create Table'
